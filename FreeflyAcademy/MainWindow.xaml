<mah:MetroWindow x:Class="FreeflyAcademy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FreeflyAcademy"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        FontFamily="{StaticResource LemonMilk}"
        Title="Strasbourg Freefly Academy" Height="450" Width="800">

    <Window.Resources>
        <local:InterfaceTemplateSelector x:Key="InterfaceTemplateSelector"></local:InterfaceTemplateSelector>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding ViewModel}" ContentTemplateSelector="{StaticResource InterfaceTemplateSelector}" />
    </Grid>
</mah:MetroWindow>
